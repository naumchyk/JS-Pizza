<div style="position: relative; background-color: #ffffff;margin-bottom: 3px;margin-top: 3px ;height: auto; border-radius: 2px">
    <div style="right: -37px; top: 1px; width: 75px ; position: absolute"><img class="z"  src="<%= pizza.icon %>" alt="Pizza"></div>
    <div style="text-align: left;font-size: 17px"><%= pizza.title %> (<%= size %>)</div>
    <span>
        <img src="assets/images/size-icon.svg" class="img size">
        <span class="diagonal"><%= pizza.small_size.size%></span>
    </span>
    <span>
        <img src="assets/images/weight.svg" class="img size">
        <span class="diagonal weight"><%= pizza.small_size.weight%></span>

    </span>
    <span style="font-size: 15px">Ціна: <%= pizza[size].price*quantity %> грн.</span>

    <div>
        <button class="btn btn-danger minus">-</button>
        <span class="label label-default"><%= quantity %></span>
        <button class="btn btn-success plus">+</button>
        <button class="btn btn-warning cancel">x</button>
    </div>
</div>